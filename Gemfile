# frozen_string_literal: true

source 'https://rubygems.org'

# The bare minimum for building, e.g. in Homebrew
group :build do
	gem 'rake', '~> 10.4'
	gem 'xcpretty'
end

# In addition to :build, for contributing
group :development do
	gem 'cocoapods', '~> 1.4'
	gem 'rubocop', '~> 0.51'
end

# For releasing to GitHub
group :release do
	gem 'octokit', '~> 4.7'
end
